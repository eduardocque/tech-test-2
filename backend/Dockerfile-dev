FROM --platform=linux/amd64 node:22

# Update system packages to fix vulnerabilities
RUN apt-get update && apt-get upgrade -y && apt-get clean

ARG NODE_ENV=development
ENV NODE_ENV=$NODE_ENV

# Definir token como build-arg
ARG NPM_TOKEN=
ENV NPM_TOKEN=$NPM_TOKEN

# Install Corepack and enable Yarn 4
RUN corepack enable && corepack prepare yarn@stable --activate

# Tini is used as the entrypoint to handle signal forwarding
ENV TINI_VERSION v0.19.0
ADD https://github.com/krallin/tini/releases/download/${TINI_VERSION}/tini /tini
RUN chmod +x /tini
ENTRYPOINT ["/tini", "-g", "--"]

ADD ./ /app
WORKDIR /app

# Change file user owner
RUN chown -R node:node /app

# Run the container under "node" user by default
USER node

# Expose port 8888 for running
EXPOSE 8888

# Expose port 9229 for running debugger
EXPOSE 9229

# # We don't need the standalone Chromium
# ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD true

