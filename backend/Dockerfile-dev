# RUN echo "Chrome Version: " && google-chrome --version
# RUN echo "Chrome Location: " && whereis google-chrome

#CMD ["yarn", "start:dev"]

CMD ["./node_modules/.bin/nodemon", "--exec", "node --inspect=0.0.0.0:9229", "--require", "ts-node/register", "src/index.ts"]
